<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:text="Customer Details"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
    <LinearLayout
        android:id="@+id/customer_details_list_row"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/customer_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer name"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="305dp" />

        <TextView
            android:id="@+id/customer_details_screen_name_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingBottom="10dp"
            tools:layout_editor_absoluteX="280dp"
            tools:layout_editor_absoluteY="545dp" />

        <TextView
            android:textSize="15dp"
            android:id="@+id/customer_details_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="305dp" />

        <TextView
            android:id="@+id/customer_details_address_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingBottom="10dp"
            tools:layout_editor_absoluteX="280dp"
            tools:layout_editor_absoluteY="545dp" />

        <TextView
            android:textSize="15dp"
            android:id="@+id/customer_details_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="305dp" />

        <TextView
            android:id="@+id/customer_details_contact_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingBottom="10dp"
            tools:layout_editor_absoluteX="280dp"
            tools:layout_editor_absoluteY="545dp" />
        <TextView
            android:id="@+id/customer_details_past_orders_All"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:text="Past orders(All)"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="305dp" />

        <TextView
            android:id="@+id/orders_All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingBottom="10dp"
            tools:layout_editor_absoluteX="280dp"
            tools:layout_editor_absoluteY="545dp" />
        <TextView
            android:id="@+id/customer_details_past_orders_My"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Past orders(My)"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="305dp" />

        <TextView
            android:id="@+id/orders_My"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingBottom="10dp"
            tools:layout_editor_absoluteX="280dp"
            tools:layout_editor_absoluteY="545dp" />
        <TextView
            android:id="@+id/customer_details_return_orders_All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Return orders(All)"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="305dp" />

        <TextView
            android:id="@+id/return_orders_All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingBottom="10dp"
            tools:layout_editor_absoluteX="280dp"
            tools:layout_editor_absoluteY="545dp" />
        <TextView
            android:id="@+id/customer_details_return_orders_My"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return orders(My)"
            android:textStyle="bold"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="305dp" />

        <TextView
            android:id="@+id/return_orders_My"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingBottom="10dp"
            tools:layout_editor_absoluteX="280dp"
            tools:layout_editor_absoluteY="545dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/custmer_details_to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="267dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="Back"
        android:textColor="@color/custome_green"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customer_details_list_row" />


</androidx.constraintlayout.widget.ConstraintLayout>
