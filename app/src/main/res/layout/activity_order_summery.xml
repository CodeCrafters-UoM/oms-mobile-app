<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="132dp"
        android:layout_height="0dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:id="@+id/Order_summery_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingLeft="35dp"
        app:layout_constraintTop_toBottomOf="@+id/logo">

        <TextView
            android:id="@+id/topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order summery"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="2"
            />
        <Spinner
            android:id="@+id/status_dropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            android:textColor="@color/custome_green"
            />

    </LinearLayout>

    <TextView
        android:background="@color/custome_green"
        android:textColor="@color/white"
        android:id="@+id/Order_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="35dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Order details"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Order_summery_topic" />


    <LinearLayout
        android:id="@+id/Order_details_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Order_details"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Order_id"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order ID" />
        <TextView
            android:id="@+id/Order_id_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="" />


        <TextView
            android:id="@+id/Order_code"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Code" />
        <TextView
            android:id="@+id/Order_code_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"

            android:text="" />

        <TextView
            android:id="@+id/quentity"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quentity" />
        <TextView
            android:id="@+id/quantity_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="" />

    </LinearLayout>


    <TextView
        android:background="@color/custome_green"
        android:id="@+id/Customer_details"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="35dp"
        android:text="Customer details"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@+id/Order_details_list"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:textColor="@color/white"
        android:text="more"
        app:layout_constraintBottom_toBottomOf="@+id/Customer_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Order_details_list" />


    <LinearLayout
        android:id="@+id/Customer_details_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Customer_details"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/customer_name"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Name" />

        <TextView
            android:id="@+id/customer_name_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="" />


        <TextView
            android:id="@+id/customer_address"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address" />
        <TextView
            android:id="@+id/customer_address_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="" />


        <TextView
            android:id="@+id/customer_contact"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact" />
        <TextView
            android:id="@+id/customer_contact_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="" />


    </LinearLayout>

    <TextView
        android:background="@color/custome_green"
        android:id="@+id/product_details"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="35dp"
        android:text="Product details"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@+id/Customer_details_list" />

    <LinearLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_details"
        android:id="@+id/Product_details_list"
        android:orientation="vertical"
        android:layout_width="340dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/payment_method"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Method" />
        <TextView
            android:id="@+id/payment_method_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="" />
        <TextView
            android:id="@+id/unit_amount"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unit Amount" />
        <TextView
            android:id="@+id/unit_amount_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/archivo_black"
        android:text="Back"
        android:textColor="@color/custome_green"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Product_details_list" />

</androidx.constraintlayout.widget.ConstraintLayout>
