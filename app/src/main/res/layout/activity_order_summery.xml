<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<ImageView
    android:id="@+id/imageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="35dp"
    android:layout_marginTop="30dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/logo" />

<TextView
    android:id="@+id/Order_summery_topic"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="35dp"
    android:layout_marginTop="10dp"
    android:text="Order summery                             New"
    android:textSize="20dp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView" />

<TextView
    android:background="#008c74"
    android:id="@+id/Order_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="35dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:text="Order details"
    android:textSize="25dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/Order_summery_topic" />


<ListView
    android:id="@+id/Order_details_list"
    android:layout_width="match_parent"
    android:layout_height="185dp"
    android:paddingLeft="35dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/Order_details" />

<TextView
    android:background="#008c74"
    android:id="@+id/Customer_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="35dp"
    android:text="Customer details"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:textSize="25dp"
    app:layout_constraintTop_toBottomOf="@+id/Order_details_list"
    tools:layout_editor_absoluteX="0dp" />

<ListView
    android:id="@+id/Customer_details_list"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:paddingLeft="35dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/Customer_details" />

<TextView
    android:background="#008c74"
    android:id="@+id/product_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="35dp"
    android:text="Product details"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:textSize="25dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/Customer_details_list" />

<ListView
    android:id="@+id/Product_details_list"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingLeft="35dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/product_details" />

</androidx.constraintlayout.widget.ConstraintLayout>
