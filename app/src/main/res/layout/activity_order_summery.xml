<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="132dp"
        android:layout_height="0dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:id="@+id/Order_summery_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingLeft="35dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order summery"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order status"
            android:textColor="@color/custome_green"
            android:paddingLeft="35dp"
            app:layout_constraintStart_toStartOf="@+id/topic"
            android:textSize="20dp" />

    </LinearLayout>



    <TextView
        android:background="@color/custome_green"
        android:textColor="@color/white"
        android:id="@+id/Order_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="35dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Order details"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Order_summery_topic" />


    <LinearLayout
        android:id="@+id/Order_details_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Order_details"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Order_id"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order ID" />
        <TextView
            android:id="@+id/Order_id_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Order ID" />


        <TextView
            android:id="@+id/Order_code"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Code" />
        <TextView
            android:id="@+id/Order_code_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"

            android:text="Order ID" />

        <TextView
            android:id="@+id/Order_description"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Description" />
        <TextView
            android:id="@+id/Order_description_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Order ID" />

        <TextView
            android:id="@+id/quentity"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quentity" />
        <TextView
            android:id="@+id/quentity_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Order ID" />

    </LinearLayout>


    <TextView
        android:background="@color/custome_green"
        android:id="@+id/Customer_details"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="35dp"
        android:text="Customer details"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@+id/Order_details_list"
        tools:layout_editor_absoluteX="0dp" />


    <LinearLayout
        android:id="@+id/Customer_details_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Customer_details"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/customer_name"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Name" />

        <TextView
            android:id="@+id/customer_name_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Customer Name" />


        <TextView
            android:id="@+id/customer_address"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address" />
        <TextView
            android:id="@+id/customer_address_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Address" />


        <TextView
            android:id="@+id/customer_contact"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact" />
        <TextView
            android:id="@+id/customer_contact_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Contact" />


    </LinearLayout>

    <TextView
        android:background="@color/custome_green"
        android:id="@+id/product_details"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="35dp"
        android:text="Product details"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@+id/Customer_details_list" />

    <LinearLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_details"
        android:id="@+id/Product_details_list"
        android:orientation="vertical"
        android:layout_width="340dp"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/payment_method"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Method" />
        <TextView
            android:id="@+id/payment_method_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Payment Method" />
        <TextView
            android:id="@+id/unit_amount"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unit Amount" />
        <TextView
            android:id="@+id/unit_amount_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Unit Amount" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
