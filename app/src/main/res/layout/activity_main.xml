<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageButton
        android:id="@+id/imageView7"
        android:layout_width="38dp"
        android:layout_height="41dp"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bars_solid" />

    <ImageButton
        android:id="@+id/imageView9"
        android:layout_width="41dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_regular" />

    <ImageButton
        android:id="@+id/imageView10"
        android:layout_width="45dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bell_regular" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="635dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/btn_home_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#008c74"
            android:drawableTop="@drawable/file_lines_solid"
            android:paddingTop="20dp"
            android:text="Orders"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_home_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/file_lines_solid"
            android:paddingTop="20dp"
            android:text="Products"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_home_order_links"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#008c74"
            android:drawableTop="@drawable/file_lines_solid"
            android:paddingTop="20dp"
            android:text="Order Links"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_home_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/file_lines_solid"
            android:paddingTop="20dp"
            android:text="Reports"
            android:textSize="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>