<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context=".Profile">

    <include
        android:id="@+id/include"
        layout="@layout/common_layout"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="15dp" />

    <TextView
        android:id="@+id/txt_settings"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/archivo_black"
        android:text="Settings"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Profile Group -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_group_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@+id/txt_settings">

        <ImageView
            android:id="@+id/profilePhotoImageView"
            android:layout_width="56dp"
            android:layout_height="49dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/circular_background"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_photo"
            app:layout_constraintEnd_toStartOf="@+id/txt_name"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="139dp"
            android:layout_height="50dp"
            android:fontFamily="@font/archivo_black"
            android:paddingTop="5dp"
            android:text="Profile"
            android:textSize="25dp"
            app:flow_horizontalAlign="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Notification Group -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/notification_group_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@+id/profile_group_container">

        <ImageView
            android:id="@+id/img_notification"
            android:layout_width="59dp"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toStartOf="@+id/txt_notification"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_circle_notifications_24" />

        <TextView
            android:id="@+id/txt_notification"
            android:layout_width="207dp"
            android:layout_height="50dp"
            android:fontFamily="@font/archivo_black"
            android:text="Notification"
            android:textSize="25dp"
            android:paddingTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.698"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Contact Group -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contact_group_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@+id/notification_group_container">

        <ImageView
            android:id="@+id/img_contact"
            android:layout_width="59dp"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toStartOf="@+id/txt_contact"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_contact_page_24" />

        <TextView
            android:id="@+id/txt_contact"
            android:layout_width="221dp"
            android:layout_height="50dp"
            android:fontFamily="@font/archivo_black"
            android:text="Contact Us"
            android:textSize="25dp"
            android:paddingTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.767"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Language Group -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/language_group_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@+id/contact_group_container">

        <ImageView
            android:id="@+id/img_language"
            android:layout_width="59dp"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toStartOf="@+id/txt_language"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_contact_page_24" />

        <TextView
            android:id="@+id/txt_language"
            android:layout_width="158dp"
            android:layout_height="39dp"
            android:fontFamily="@font/archivo_black"
            android:text="Language"
            android:textSize="25dp"
            android:paddingTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.531"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Log Out Group -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/logOut_group_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@+id/language_group_container">

        <ImageView
            android:id="@+id/img_logOut"
            android:layout_width="59dp"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toStartOf="@+id/txt_LogOut"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_exit_to_app_24" />

        <TextView
            android:id="@+id/txt_LogOut"
            android:layout_width="188dp"
            android:layout_height="45dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/archivo_black"
            android:text="Log Out"
            android:textSize="25dp"
            android:paddingTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.605"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/archivo_black"
        android:text="Back"
        android:textColor="#006756"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.924"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logOut_group_container" />

</androidx.constraintlayout.widget.ConstraintLayout>
